<div class="container">
  <div class="row">
    <div class="col-md-3 sidebar">
      <div class="sidebar-header">
        <span class="glyphicon glyphicon-screenshot"></span>
        Search Options
      </div>
      <div class="sidebar-content">
        <form role="form" {{action "search" on="submit"}}>
          <div class="form-group">
            <label for="origin">Origin</label>
            {{view Ember.Select
                content=origAirports
                optionValuePath="content.id"
                optionLabelPath="content.desc"
                value=origin
                class="form-control"
                prompt="Select Origin"}}
          </div>
          <div class="form-group">
            <label for="destination">Destination</label>
            {{view Ember.Select
                content=destAirports
                optionValuePath="content.id"
                optionLabelPath="content.desc"
                value=destination
                class="form-control"
                prompt="Select Destination"}}
          </div>
          <div class="form-group">
            <label for="departDate">Depart</label>
            {{input value=departDate class="form-control" type="text" id="input-departDate" placeholder="Depart"}}
          </div>
          <div {{bind-attr class=":form-group isReturn::hidden"}}>
            <label for="returnDate">Return</label>
            {{input value=returnDate class="form-control" type="text" id="input-arriveDate" placeholder="Return"}}
          </div>
          {{view SlapFlightFe.ReturnSelector}}
          <button type="submit" class="btn btn-success" {{bind-attr disabled="isSearching"}}>Search <span class="glyphicon glyphicon-search"></span></button>
        </form>
      </div>
    </div>
    <div class="col-md-9">
      <ul class="nav nav-tabs" id="tab-trip-listing">
        <li class="active"><a href="#depart-trip" data-toggle="tab">Depart</a></li>
        <li {{bind-attr class="isReturn::hidden"}}><a href="#return-trip" data-toggle="tab">Return</a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="depart-trip">
          {{view SlapFlightFe.ReturnTripListing trip=departTrip}}
        </div>
        <div class="tab-pane" id="return-trip">
          {{view SlapFlightFe.ReturnTripListing trip=returnTrip}}
        </div>
      </div>
    </div>
  </div>
</div>
